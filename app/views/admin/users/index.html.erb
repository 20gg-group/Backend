</br>             
<h3 class="text-center font-weight-bold">List User</h3>
</br>
<div class='row'>
  <div class='col-6'>
    <%= link_to 'New user', new_admin_user_path,class:"btn btn-info"%>
  </div>
  <div class='col-6'>
    <%# <div class="float-right"> %>
    <div class="d-flex flex-row-reverse bd-highlight">
      <div class="p-2 bd-highlight">
      </div>
      
      <div class="p-2 bd-highlight">
        <%= search_form_for [:admin,@q],class:"form-inline my-2 my-lg-0" do |f| %>
          
          <%= f.search_field :full_name_or_email_or_phone_number_cont,placeholder:"Name, Email, Phone" ,class:"form-control mr-sm-2" %>
          <%= f.button :Search,class: "btn btn-outline-success" %>
        <% end %>
      </div>
    </div>
  </div> 
</div>
</br>
<table class="table">
    
  <thead >
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Full Name</th>  
      <th>Phone Number</th>
      <th>Activated</th>
      <th>Date Activate</th>                    
      <th colspan="3">Action</th>                             
      <%# <th class="col-1"></th> 
      <th class="col-2"></th>  %>
    </tr>              
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>  
        <td><%= user.email %></td>
        <td><%= user.full_name %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.activated%></td>
        <td><%= user.activated_at %></td>     
        <td><%= link_to 'Show', admin_user_path(user),class:"btn btn-info"%></td>
        <td><%= link_to 'Edit',edit_admin_user_path(user),class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>                    
    <% end %>                    
  </tbody>              
</table>

<div class="d-flex justify-content-end">
  <%= paginate @users %>
</div>