<section class="content">
      <h3>List User</h3>                 
            <div class="table-container">
              <%= paginate @users %> 

              <table class="table table-striped table-responsive">
                <thead class="thead-dark">
                  <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Full Name</th>  
                    <th>Phone Number</th>
                    <th>Date Create</th>                    
                    <th colspan="3">Action</th>                             
                    <%# <th class="col-1"></th> 
                    <th class="col-2"></th>  %>
                  </tr>              
                </thead>
                <tbody>
                   <% @users.each do |user| %>
                      <tr>
                        <td ><%= user.id %></td>  
                        <td ><%= user.email %></td>
                        <td ><%= user.full_name %></td>
                        <td ><%= user.phone_number %></td>
                        <td ><%= user.created_at %></td>     
                        <td ><%= link_to 'Show', '' %></td>
                        <td ><%= link_to 'Edit', '' %></td>
                        <td ><%= link_to 'Destroy', '', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>                    
                    <% end %>                    
                </tbody>              
              </table>
              
            </div>
        
      
        <%= paginate @users %> 
        

      
    </section>    