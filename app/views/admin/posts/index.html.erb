    </br>             
    <h3 class="text-center font-weight-bold">List Posts</h3>
    </br>
    <div class='row'>
      <div class='col-6'>
      <%= paginate @posts %>
      </div>
      <div class='col-6'>
        <div class="float-right">
          <%= link_to 'New post', new_admin_post_path,class:"btn btn-info"%>
        </div>
      </div> 
    <table class="table">
    
      <thead >
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Price</th>  
          <th>Area</th>
          <th>Date Post</th>                    
          <th colspan="3">Action</th>                             
          <%# <th class="col-1"></th> 
          <th class="col-2"></th>  %>
        </tr>              
      </thead>
      <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td ><%= post.id %></td>  
              <td ><%= post.title %></td>
              <td ><%= post.price %></td>
              <td ><%= post.area %></td>
              <td ><%= post.created_at %></td>     
              <td ><%= link_to 'Show', admin_post_path(post) ,class:"btn btn-info"%></td>
              <td ><%= link_to 'Edit', edit_admin_post_path(post),class:"btn btn-info" %></td>
              <td ><%= link_to 'Destroy', '', method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
            </tr>                    
          <% end %>                    
      </tbody>              
    </table>
      