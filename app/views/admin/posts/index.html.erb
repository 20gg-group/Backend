    </br>             
    <h3 class="text-center font-weight-bold">List Posts</h3>
    </br>
    <%= paginate @posts %> 
    <table class="table">
    
      <thead >
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Price</th>  
          <th>Area</th>
          <th>Date Post</th>                    
          <th colspan="3">Action</th>                             
          <%# <th class="col-1"></th> 
          <th class="col-2"></th>  %>
        </tr>              
      </thead>
      <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td ><%= post.id %></td>  
              <td ><%= post.title %></td>
              <td ><%= post.price %></td>
              <td ><%= post.area %></td>
              <td ><%= post.created_at %></td>     
              <td ><%= link_to 'Show', '' %></td>
              <td ><%= link_to 'Edit', '' %></td>
              <td ><%= link_to 'Destroy', '', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>                    
          <% end %>                    
      </tbody>              
    </table>
      